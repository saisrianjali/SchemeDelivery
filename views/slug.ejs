<script>
    function handleTabSwitch() {
        const tabs = document.querySelectorAll('#tabs-container a');
        const tabContents = document.querySelectorAll('.tab-content');

        tabs.forEach(tab => {
            tab.addEventListener('click', function(event) {
                event.preventDefault(); // Prevent the default link behavior

                // Remove 'active' class from all tabs and hide all tab contents
                tabs.forEach(tab => tab.classList.remove('text-blue-600', 'border-blue-600', 'active', 'dark:text-blue-500', 'dark:border-blue-500'));
                tabContents.forEach(content => content.classList.add('hidden'));

                // Add 'active' class to the clicked tab and display the corresponding content
                this.classList.add('text-blue-600', 'border-blue-600', 'active', 'dark:text-blue-500', 'dark:border-blue-500');
                const targetTab = this.getAttribute('data-tab');
                document.getElementById(`${targetTab}-content`).classList.remove('hidden');

                // Optionally, change the aria-current attribute for accessibility
                tabs.forEach(tab => tab.removeAttribute('aria-current'));
                this.setAttribute('aria-current', 'page');
            });
        });
    }

    // Initialize the tab switch functionality when the page is loaded
    document.addEventListener('DOMContentLoaded', handleTabSwitch);

    function checkContent() {
        const onlineContent = document.getElementById('online-content').innerHTML.trim();
        const offlineContent = document.getElementById('offline-content').innerHTML.trim();

        // Getting the content containers and tab labels
        const onlineContentContainer = document.getElementById('online-content-container');
        const offlineContentContainer = document.getElementById('offline-content-container');
        const onlineTag = document.getElementById('online');
        const offlineTag = document.getElementById('offline');

        // Check for online content
        if (onlineContent === "") {
            onlineContentContainer.classList.add('hidden');
            onlineTag.classList.add('hidden'); // Hide the online tab if no content
        } else {
            onlineContentContainer.classList.remove('hidden');
            onlineTag.style.display = none;
        }
        if (offlineContent === "") {
            offlineContentContainer.classList.add('hidden');
            offlineTag.classList.add('hidden');
        } else {
            offlineContentContainer.classList.remove('hidden');
            offlineTag.classList.remove('hidden');
        }
    }
    document.addEventListener('DOMContentLoaded', checkContent);
 document.addEventListener('DOMContentLoaded', () => {
        const togglers = document.querySelectorAll('.accordion__header');

        togglers.forEach((header) => {
        header.addEventListener('click', (e) => {
        const contentId = e.currentTarget.dataset.toggle;
        const contentBlock = document.querySelector(contentId);

        if (e.currentTarget.classList.contains('active')) {
        contentBlock.style.maxHeight = '';
    } else {
        contentBlock.style.maxHeight = contentBlock.scrollHeight + 'px';
    }

        e.currentTarget.classList.toggle('active');
    });
    });
    });

</script>


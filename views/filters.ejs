                <p class="text-base leading-relaxed text-gray-500 dark:text-gray-400 text-center translation">
                    Do you want to delete the account?
                </p>
            </div>
            <!-- Modal footer -->
            <div class="flex items-center p-4 md:p-5 border-t border-gray-200 rounded-b dark:border-gray-600 justify-center gap-5">
                <form action="/login/logout" method="GET">
                    <button type="submit" data-modal-hide="static-modal" class="text-white bg-red-700 hover:bg-red-900 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-b xl:rounded-t text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 translation">I accept</button>

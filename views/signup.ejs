<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Multi-Step Form with Progress Bar</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            background: linear-gradient(to bottom right, #007bff, #d4edda);
            height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .form-container {
            background: rgba(255, 255, 255, 0.95);
            padding: 40px;
            border-radius: 15px;
            max-width: 800px;
            width: 100%;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.3);
        }

        .form-control {
            border: none;
            border-bottom: 2px solid #ccc;
            border-radius: 0;
            padding-left: 40px;
            font-size: 16px;
        }

        .input-container {
            position: relative;
            margin-bottom: 30px;
        }

        .input-container i {
            position: absolute;
            left: 10px;
            top: 50%;
            transform: translateY(-50%);
            color: #888;
        }

        .btn-container {
            text-align: center;
            margin-top: 30px;
        }

        .btn {
            margin: 5px;
            padding: 10px 30px;
            font-size: 16px;
        }

        .form-page {
            display: none;
        }

        .form-page.active {
            display: block;
        }

        .progress {
            height: 20px;
            margin-bottom: 30px;
        }

        .progress-bar {
            background: #007bff;
            transition: width 0.4s ease;
        }

        @media (max-width: 768px) {
            .form-container {
                padding: 20px;
                max-width: 90%;
            }

            .form-control {
                font-size: 14px;
            }

            .btn {
                font-size: 14px;
                padding: 8px 15px;
            }
        }
    </style>
</head>
<body>
<div class="form-container">
    <h1 class="text-center"> Registration Form</h1>
    <div class="progress">
        <div class="progress-bar" role="progressbar" style="width: 25%;" id="progressBar"></div>
    </div>
    <form id="registrationForm" action="/signup" method="post">

        <!-- Step 1 -->
        <div class="form-page active" id="page-1">
            <h3>Step 1</h3>
            <div class="input-container">
                <i class="fas fa-user"></i>
                <input name = 'name' type="text" id="name" class="form-control" placeholder="Your Name" required>
            </div>
            <div class="input-container">
                <i class="fas fa-lock"></i>
                <input type="password" name = 'password' id="password" class="form-control" placeholder="Password (8 characters, uppercase, digit, special)" required>
            </div>
            <div class="input-container">
                <i class="fas fa-id-card"></i>
                <input type="text" id="aadhar" name = 'aadhar' class="form-control" placeholder="Aadhar Card Number (12 digits)" maxlength="12" required>
            </div>
            <div class="input-container">
                <i class="fas fa-id-card-alt"></i>
                <input type="text" id="pan" name = 'pan' class="form-control" placeholder="PAN Card Number (XXXXX1234X)" maxlength="10" required>
            </div>
            <div class="btn-container">
                <button type="button" class="btn btn-primary" id="next-1">Next</button>
            </div>
        </div>

        <!-- Step 2 -->
        <div class="form-page" id="page-2">
            <h3>Step 2</h3>
            <div class="input-container">
                <i class="fas fa-address-card"></i>
                <input type="text" id="ration" name = 'ration' class="form-control" placeholder="Ration Card Number (10 digits)" maxlength="10" required>
            </div>
            <div class="input-container">
                <i class="fas fa-map-marker-alt"></i>
                <select id="state" class="form-control" name = 'state' required>
                    <option value="">Select State</option>
                    <option value="Andhra Pradesh">Andhra Pradesh</option>
                    <option value="Arunachal Pradesh">Arunachal Pradesh</option>
                    <option value="Assam">Assam</option>
                    <option value="Bihar">Bihar</option>
                    <option value="Chhattisgarh">Chhattisgarh</option>
                    <option value="Goa">Goa</option>
                    <option value="Gujarat">Gujarat</option>
                    <option value="Haryana">Haryana</option>
                    <option value="Himachal Pradesh">Himachal Pradesh</option>
                    <option value="Jharkhand">Jharkhand</option>
                    <option value="Karnataka">Karnataka</option>
                    <option value="Kerala">Kerala</option>
                    <option value="Madhya Pradesh">Madhya Pradesh</option>
                    <option value="Maharashtra">Maharashtra</option>
                    <option value="Manipur">Manipur</option>
                    <option value="Meghalaya">Meghalaya</option>
                    <option value="Mizoram">Mizoram</option>
                    <option value="Nagaland">Nagaland</option>
                    <option value="Odisha">Odisha</option>
                    <option value="Punjab">Punjab</option>
                    <option value="Rajasthan">Rajasthan</option>
                    <option value="Sikkim">Sikkim</option>
                    <option value="Tamil Nadu">Tamil Nadu</option>
                    <option value="Telangana">Telangana</option>
                    <option value="Tripura">Tripura</option>
                    <option value="Uttar Pradesh">Uttar Pradesh</option>
                    <option value="Uttarakhand">Uttarakhand</option>
                    <option value="West Bengal">West Bengal</option>

                </select>
            </div>
            <div class="input-container">
                <i class="fas fa-transgender-alt"></i>
                <select id="gender" class="form-control" required name = 'gender'>
                    <option value="">Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <div class="input-container">
                <i class="fas fa-calendar-alt"></i>
                <input type="number" id="age" name = 'age' class="form-control" placeholder="Age" required>
            </div>
            <div class="btn-container">
                <button type="button" class="btn btn-secondary" id="prev-2">Previous</button>
                <button type="button" class="btn btn-primary" id="next-2">Next</button>
            </div>
        </div>

        <!-- Step 3 -->
        <div class="form-page" id="page-3">
            <h3>Step 3</h3>
            <div class="input-container">
                <i class="fas fa-users"></i>
                <input type="text" id="caste" name = 'caste' class="form-control" placeholder="Caste" required>
            </div>
            <div class="input-container">
                <i class="fas fa-question-circle"></i>
                <select id="minority" class="form-control" name = 'minority' required>
                    <option value="">Minority Status</option>
                    <option value="Yes">Yes</option>
                    <option value="No">No</option>
                </select>
            </div>
            <div class="input-container">
                <i class="fas fa-wheelchair"></i>
                <select id="differentlyAbled" class="form-control" name = 'differentlyAbled' required>
                    <option value="">Differently Abled</option>
                    <option value="Yes">Yes</option>
                    <option value="No">No</option>
                </select>
            </div>
            <div class="input-container">
                <i class="fas fa-heart"></i>
                <select id="maritalStatus" class="form-control" name = 'maritalStatus' required>
                    <option value="">Marital Status</option>
                    <option value="Single">Single</option>
                    <option value="Married">Married</option>
                    <option value="Divorced">Divorced</option>
                </select>
            </div>
            <div class="btn-container">
                <button type="button" class="btn btn-secondary" id="prev-3">Previous</button>
                <button type="button" class="btn btn-primary" id="next-3">Next</button>
            </div>
        </div>

        <!-- Step 4 -->
        <div class="form-page" id="page-4">
            <h3>Step 4</h3>
            <div class="input-container">
                <i class="fas fa-percent"></i>
                <input type="number" id="disabilityPercentage" class="form-control" name = 'disabilityPercentage' placeholder="Disability Percentage" required>
            </div>
            <div class="input-container">
                <i class="fas fa-hand-holding-usd"></i>
                <select name = 'bpl' id="bpl" class="form-control" required>
                    <option value="">Below Poverty Line</option>
                    <option value="Yes">Yes</option>
                    <option value="No">No</option>
                </select>
            </div>
            <div class="input-container">
                <i class="fas fa-graduation-cap"></i>
                <select id="student" name = 'student' class="form-control" required>
                    <option value="">Are you a Student?</option>
                    <option value="Yes">Yes</option>
                    <option value="No">No</option>
                </select>
            </div>
            <div class="input-container">
                <i class="fas fa-briefcase"></i>
                <input type="text" id="occupation" name = 'occupation' class="form-control" placeholder="Occupation" required>
            </div>
            <div class="btn-container">
                <button type="button" class="btn btn-secondary" id="prev-4">Previous</button>
                <button type="submit" class="btn btn-success">Submit</button>
            </div>
        </div>
    </form>
</div>

<script>
    const pages = document.querySelectorAll('.form-page');
    const progressBar = document.getElementById('progressBar');
    let currentPage = 0;

    function showPage(index) {
        pages.forEach((page, i) => {
            page.classList.toggle('active', i === index);
        });
        progressBar.style.width = `${((index + 1) / pages.length) * 100}`;
    }

    document.getElementById('next-1').addEventListener('click', () => {
        currentPage++;
        showPage(currentPage);
    });

    document.getElementById('prev-2').addEventListener('click', () => {
        currentPage--;
        showPage(currentPage);
    });

    document.getElementById('next-2').addEventListener('click', () => {
        currentPage++;
        showPage(currentPage);
    });

    document.getElementById('prev-3').addEventListener('click', () => {
        currentPage--;
        showPage(currentPage);
    });

    document.getElementById('next-3').addEventListener('click', () => {
        currentPage++;
        showPage(currentPage);
    });

    document.getElementById('prev-4').addEventListener('click', () => {
        currentPage--;
        showPage(currentPage);
    });
</script>
</body>
</html>